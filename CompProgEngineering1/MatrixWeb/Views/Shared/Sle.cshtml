@model MatrixWeb.Models.SleView

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>SleView</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <table>
        @for (int column = 0; column < Model.Data.Length; column++)
        {
            <tr>
                @for (int row = 0; row < Model.Data[column].Length; row++)
                {
                    <td>@Html.EditorFor(x => Model.Data[column][row])</td>
                }
                <td>=</td>
                <td>@Html.EditorFor(x => x.Facts[column])</td>
            </tr>
        }
    </table>

    <p>Calculation:</p>
    @for(int i = 0; i < Model.X.Length; i++)
    {
        <span>@i - @Model.X[i]</span>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Calculate SLE" class="btn btn-default" />
        </div>
    </div>
</div>
}
